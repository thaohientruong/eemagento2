<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <visualmerchandiser>
            <options>
                <product_attributes>name,sku,price,stock</product_attributes>
                <smart_attributes>name,sku,price,quantity_and_stock_status,color</smart_attributes>
                <insert_mode>0</insert_mode>
                <minimum_stock_threshold>1</minimum_stock_threshold>
                <color_attribute_code>color</color_attribute_code>
            </options>
        </visualmerchandiser>
        <catalog>
            <!-- MAGETWO-41737: Fix for Api\CategoryLinkRepositoryTest case -->
            <custom_categories_sort>1</custom_categories_sort>
        </catalog>
    </default>
</config>
