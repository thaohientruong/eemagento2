        <input type="hidden" class="qty_max_allowed" value="<?php /* @escapeNotVerified */ echo $_item->getQtyMaxAllowed() ?>"/>
    <?php endif ?>
    <?php if ($_item->getQtyMinAllowed()): ?>
        <input type="hidden" class="qty_min_allowed" value="<?php /* @escapeNotVerified */ echo $_item->getQtyMinAllowed() ?>"/>
    <?php endif ?>
    <?php if ($_item->getCode() == \Magento\AdvancedCheckout\Helper\Data::ADD_ITEM_STATUS_FAILED_QTY_INCREMENTS): ?>
        <input type="hidden" class="qty_increments" value="<?php /* @escapeNotVerified */ echo $_item->getQtyIncrements() ?>"/>
    <?php endif ?>
