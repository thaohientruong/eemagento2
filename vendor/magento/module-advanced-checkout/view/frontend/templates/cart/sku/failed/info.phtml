$escapedSku = $block->escapeHtml($_item->getSku());
?>
<dl class="item-options product-attibute-sku">
    <dt><?php /* @escapeNotVerified */ echo __('Sku')?></dt>
    <dd><?php /* @escapeNotVerified */ echo $escapedSku ?></dd>
</dl>
<?php echo $block->getProductTierPriceHtml(); ?>
<?php /* @escapeNotVerified */ echo $block->getLink(); ?>
<div class="message error item"><div><?php /* @escapeNotVerified */ echo $block->getMessage(); ?></div></div>
<input type="hidden" name="failed[<?php /* @escapeNotVerified */ echo $escapedSku; ?>][sku]" value="<?php echo $block->escapeHtml($_item->getSku()); ?>" />
<input type="hidden" name="failed[<?php /* @escapeNotVerified */ echo $escapedSku; ?>][code]" value="<?php /* @escapeNotVerified */ echo $_item->getCode(); ?>" />
<input type="hidden" name="failed[<?php /* @escapeNotVerified */ echo $escapedSku; ?>][qty]" value="<?php /* @escapeNotVerified */ echo $_item->getQty(); ?>" class="sku_failed_qty" data-role="sku-failed-qty" />
<?php if (!$block->isItemSkuFailed()): ?>
