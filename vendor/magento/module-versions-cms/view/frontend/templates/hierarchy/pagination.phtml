/* @var $block \Magento\VersionsCms\Block\Hierarchy\Pagination */
?>
<div class="pager only">
    <div class="pages">
        <strong class="label" id="paging-label"><?php /* @escapeNotVerified */ echo __('Page:') ?></strong>
        <ul class="items" aria-labelledby="paging-label">
        <?php if ($block->canShowSequence()):?>
            <?php if ($block->canShowPrevious()):?>
            <li class="item">
                <a class="action previous" href="<?php /* @escapeNotVerified */ echo $block->getPreviousNode()->getUrl()?>">
                    <span class="label"><?php /* @escapeNotVerified */ echo __('Page') ?></span>
                    <span><?php /* @escapeNotVerified */ echo __('Previous') ?></span>
                </a>
            </li>
            <?php endif;?>
        <?php endif;?>

        <?php if ($block->canShowOuter() && $block->canShowFirst()):?>
            <li class="item">
                <a class="page first" title="<?php echo $block->escapeHtml($block->getFirstNode()->getLabel())?>" href="<?php /* @escapeNotVerified */ echo $block->getFirstNode()->getUrl()?>">
                    <span class="label"><?php /* @escapeNotVerified */ echo __('Page') ?></span>
                    <span><?php /* @escapeNotVerified */ echo $block->getNodeLabel($block->getFirstNode())?></span>
                </a>
            </li>
        <?php endif;?>

        <?php if ($block->canShowPreviousJump()):?>
            <li class="item"><a class="page action previous jump" title="<?php echo $block->escapeHtml($block->getPreviousJumpNode()->getLabel())?>" href="<?php /* @escapeNotVerified */ echo $block->getPreviousJumpNode()->getUrl()?>"><span>...</span></a></li>
        <?php endif;?>

        <?php foreach ($block->getNodesInRange() as $node):?>
            <?php if ($node->getIsCurrent()):?>
                <li class="item current">
                    <strong>
                        <span class="label"><?php /* @escapeNotVerified */ echo __('You\'re currently reading page') ?></span>
                        <span><?php /* @escapeNotVerified */ echo $block->getNodeLabel($node)?></span>
                    </strong>
                </li>
            <?php else: ?>
                <li class="item">
                    <a title="<?php echo $block->escapeHtml($node->getLabel())?>" href="<?php /* @escapeNotVerified */ echo $node->getUrl()?>" class="page">
                        <span class="label"><?php /* @escapeNotVerified */ echo __('Page') ?></span>
                        <span><?php /* @escapeNotVerified */ echo $block->getNodeLabel($node)?></span>
                    </a>
                </li>
            <?php endif; ?>
        <?php endforeach;?>

        <?php if ($block->canShowNextJump()):?>
            <li class="item"><a class="page action forward jump" title="<?php echo $block->escapeHtml($block->getNextJumpNode()->getLabel())?>" href="<?php /* @escapeNotVerified */ echo $block->getNextJumpNode()->getUrl()?>"><span>...</span></a></li>
        <?php endif;?>

        <?php if ($block->canShowOuter() && $block->canShowLast()):?>
          <li class="item">
              <a class="page last" title="<?php echo $block->escapeHtml($block->getLastNode()->getLabel())?>" href="<?php /* @escapeNotVerified */ echo $block->getLastNode()->getUrl()?>">
                  <span class="label"><?php /* @escapeNotVerified */ echo __('Page') ?></span>
                  <span><?php /* @escapeNotVerified */ echo $block->getNodeLabel($block->getLastNode())?></span>
              </a>
          </li>
        <?php endif;?>

        <?php if ($block->canShowSequence()):?>
            <?php if ($block->canShowNext()):?>
            <li class="item">
                <a class="action next" href="<?php /* @escapeNotVerified */ echo $block->getNextNode()->getUrl()?>">
                    <span class="label"><?php /* @escapeNotVerified */ echo __('Page') ?></span>
                    <span><?php /* @escapeNotVerified */ echo __('Next') ?></span>
                </a>
            </li>
            <?php endif;?>
        <?php endif;?>
        </ul>
    </div>
</div>
