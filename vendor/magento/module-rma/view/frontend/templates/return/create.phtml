                                        <td data-th="<?php echo $block->escapeHtml(__('Remaining Qty')) ?>" class="col remaining qty"><?php /* @escapeNotVerified */ echo $item[2] ?></td>
                                        <td data-th="<?php echo $block->escapeHtml(__('Qty')) ?>" class="col qty">
                                            <?php if (!$item[3]): ?>
